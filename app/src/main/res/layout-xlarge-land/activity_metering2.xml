<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".metering.MeteringActivity"
    android:onClick="onClick">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Висота"
        android:id="@+id/textView10"
        android:textSize="70dp"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/heightValue"
        android:layout_alignStart="@+id/heightValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/heightValue"
        android:textSize="180dp"
        android:text="00.00"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/angle_str"
        android:id="@+id/textView"
        android:textSize="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00.00"
        android:id="@+id/angleValue"
        android:textSize="180dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/layer"
        android:layout_alignStart="@+id/layer"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="o"
        android:id="@+id/textView2"
        android:textSize="70dp"
        android:layout_alignTop="@+id/angleValue"
        android:layout_toRightOf="@+id/angleValue"
        android:layout_toEndOf="@+id/angleValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="m"
        android:id="@+id/textView3"
        android:textSize="70dp"
        android:layout_alignTop="@+id/heightValue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:visibility="visible"
        android:id="@+id/layer">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Наступне вимірювання"
            android:id="@+id/buttonUpdate"
            android:layout_above="@+id/buttonChange"
            android:layout_centerHorizontal="true"
            android:textSize="70dp"
            style="@style/AlertDialog.AppCompat"
            android:nestedScrollingEnabled="false"
            android:onClick="onClick" />

        <Button
            style="@style/AlertDialog.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Змiнити даннi"
            android:id="@+id/buttonChange"
            android:textSize="70dp"
            android:onClick="onClick"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom" />

    </RelativeLayout>

</RelativeLayout>
