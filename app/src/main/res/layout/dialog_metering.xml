<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Зрiст"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="69dp"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editHeight"
        android:layout_alignStart="@+id/editHeight" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/editHeight"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:focusable="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioHeight"
        android:layout_below="@+id/editHeight"
        android:layout_alignLeft="@+id/editHeight"
        android:layout_alignStart="@+id/editHeight">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 метрiв"
            android:id="@+id/radioButton1"
            android:checked="true"
            android:layout_below="@+id/radioButton2"
            android:layout_alignLeft="@+id/editHeight"
            android:textSize="35dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 метрiв"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:layout_below="@+id/editHeight"
            android:layout_alignLeft="@+id/editHeight"
            android:layout_alignStart="@+id/editHeight"
            android:layout_marginTop="10dp"
            android:textSize="35dp" />

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Розрахувати"
        android:id="@+id/buttonOk"
        android:layout_gravity="center_horizontal"
        style="@style/AlertDialog.AppCompat"
        android:textSize="35dp"
        android:layout_below="@+id/radioHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>